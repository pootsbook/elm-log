<p><%= @urls.count %> URLs for review.</p>
<table class="pure-table">
  <thead>
    <tr>
      <th>Archive</th>
      <th>Show</th>
      <th>Link</th>
    </tr>
  </thead>
<% @urls.each do |url| %>
  <tr>
    <td><%= button_to 'Archive', archived_urls_path(id: url.id), class: 'pure-button' %></td>
    <td><%= link_to 'Show', url_path(url), class: 'pure-button pure-button-primary' %></td>
    <td><%= link_to url.url, url.url %></td>
  </tr>
<% end %>
</table>
